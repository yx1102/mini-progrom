.goods .goods_content {
  display: flex;
}
.goods .goods_content .goods_left {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods .goods_content .goods_left image {
  width: 80%;
}
.goods .goods_content .goods_right {
  flex: 4;
  font-size: 14px;
  box-sizing: border-box;
  padding-top: 10px;
  padding-right: 10px;
  color: #666;
}
.goods .goods_content .goods_right .goods_desc {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods .goods_content .goods_right .goods_price {
  color: var(--themeColor);
  padding: 10px 0;
  font-size: 16px;
}
