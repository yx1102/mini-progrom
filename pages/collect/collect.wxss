.collect .desc {
  padding: 30rpx 10rpx;
}
.collect .desc text {
  padding: 10rpx;
  border: 1px solid #ccc;
  margin: 5rpx 20rpx;
}
.collect .desc .all {
  border: 1px solid var(--themeColor);
  color: var(--themeColor);
}
.collect .good_item {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
}
.collect .good_item .good_shop {
  margin-bottom: 20rpx;
}
.collect .good_item .good_content {
  padding-top: 20rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
}
.collect .good_item .good_content .content_left {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect .good_item .good_content .content_left navigator {
  flex: 7;
}
.collect .good_item .good_content .content_left navigator image {
  width: 80%;
}
.collect .good_item .good_content .good_info {
  flex: 4;
}
.collect .good_item .good_content .good_info .good_title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.collect .good_item .good_content .good_info .good_wrap {
  text-align: right;
  margin-top: 30rpx;
}
.collect .good_item .good_content .good_info .good_wrap .good_price {
  color: var(--themeColor);
  font-weight: bolder;
  font-size: 36rpx;
}
