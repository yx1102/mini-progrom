.category {
  height: 100%;
}
.category .cate_container {
  height: calc(100vh - 50rpx);
  display: flex;
  box-sizing: border-box;
}
.category .cate_container .cate_left {
  flex: 2;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
.category .cate_container .cate_left .menu_item {
  padding: 10rpx;
}
.category .cate_container .cate_left .menu_item.active {
  border-left: 3px solid var(--themeColor);
  color: var(--themeColor);
}
.category .cate_container .cate_right {
  flex: 6;
  color: #333333;
  text-align: center;
  font-size: 24rpx;
  box-sizing: border-box;
}
.category .cate_container .cate_right .title {
  width: 100%;
  color: #999;
  padding: 30rpx 0;
}
.category .cate_container .cate_right .title .delimit {
  padding: 0 10rpx;
}
.category .cate_container .cate_right .cate_list {
  display: flex;
  flex-wrap: wrap;
}
.category .cate_container .cate_right .cate_list .list_item {
  width: 33.33%;
}
.category .cate_container .cate_right .cate_list .list_item image {
  width: 50%;
}
